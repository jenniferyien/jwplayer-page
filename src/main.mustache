<!doctype html>
<html>
  <head>
    <title>JW Player Webpage</title>
    <link rel="stylesheet" href="css/main.css">
    <script src="src/main.js"></script>
  </head>
  <body>
   <nav class="navbar navbar-inverse" role="navigation">
     <div class="container-fluid">
       <div class="navbar-header">
         <div class='mobile-display'>
           <button type="button" class="navbar-toggle">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
             <span class="icon-bar"></span>
           </button>
           <a class="main-cta btn btn-primary btn-lg hidden-lg" href='/pricing' role="button">
             Get Started
           </a>
         </div>
         <a class="navbar-logo" href="/">
           <div class='logo-image'></div>
         </a>
       </div>
       
       <div class="navbar-collapse">
         <ul class="nav navbar-nav">
           <li><a href="/video-solutions">Solutions</a></li>
           <li><a href="/customers">Customers</a></li>
           <li><a href="/pricing">Pricing</a></li>
         </ul>
         <ul class="nav navbar-nav navbar-right">
           <li><a href="/company/about-us">Company</a></li>
           <li><a href="/company/careers">Careers</a></li>
           <li><a href="https://developer.jwplayer.com/">Developer</a></li>
           <li><a href="https://support.jwplayer.com/">Support</a></li>
           <li><a href="https://dashboard.jwplayer.com/#/support">Sign-In</a></li>
           <li>
             <a class="main-cta btn btn-primary btn-lg hidden-md hidden-sm hidden-xs" href='/pricing' role="button">
               Get Started
             </a>
           </li>
         </ul>
       </div>
     </div>
   </nav>
   
   <div class='hero'>
     <div class='container'>
       <div class='titling'>
         <div class='title-icon'></div>
         <h1 class='hero-title'>{{heading}}</h1>
       </div>
       <p class='hero-description'>{{subheading}}</p>
       <a class="hero-cta-btn btn" role="button" href={{button.link}} style="background-color:{{button.color}};">{{button.label}}</a>
       <div class='product-image'></div>
     </div>
   </div>
   
   <div class='playlist-types'>
     <div class='container'>
       <h2 class='playlist-header'>{{columnsBlock.heading}}</h2>
       <div class='types'>
         {{#columnsBlock.columns}}
      		<div class='col-lg-4 col-md-6 col-sm-12'>
            <h2>{{heading}}</h2>
            <p>{{description}}</p>
            <div>
              <h4>{{links-list.label}}</h4>
              {{#links-list.links}}
                <li><a href={{link}}>{{label}}</a></li>
              {{/links-list.links}}
            </div>
            <a class="playlist-cta-btn btn" role="button" href={{button.link}} style="background-color:{{button.color}};">{{button.label}}</a>
          </div>
        {{/columnsBlock.columns}}
       </div>
     </div>
   </div>
   
   <div class='container side-by-side'>
     {{#sideBySide}}
       <div class='info {{layout-type}}'>
         <div class='col-sm-4 col-xs-12 info-image' style="background-image: url('./{{image}}')"></div>
         <div class='col-sm-8 col-xs-12 info-details'>
           <h3>{{heading}}</h3>
           <p>{{description}}</p>
         </div>
       </div>
     {{/sideBySide}}
   </div>
   
